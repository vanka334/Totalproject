<Window x:Class="Totalproject.User_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Totalproject"
        mc:Ignorable="d"
        Title="User_Window" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0.3*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="Products"/>
        <DataGrid x:Name="Checks" Grid.Column="1" />
        <Button x:Name="Buy" Content="Купить" Click="Buy_Click" Grid.Row="1" FontFamily="Arial Black" FontSize="22" Margin="0,0,200,0"/>
        <Button x:Name="Print" Content="Распечатать" Click="Print_Click" Grid.Column="1" Grid.Row="1" FontFamily="Arial Black" FontSize="22"/>
        <TextBlock Grid.Row="1" Margin="205,24,0,55" Text="Внесено:"/>
        <TextBox x:Name="Input" Grid.Row="1" Margin="205,50,0,25"/>


    </Grid>
</Window>
